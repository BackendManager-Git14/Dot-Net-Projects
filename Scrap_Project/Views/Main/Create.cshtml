@{
}

<form action="~/Main/Create" method="post" id="sbmt">
    <table>
        <tr>
            <td>
                <b> @Html.DisplayNameFor(m => m.u_name) </b>
            </td>
            <td>
                @Html.TextBoxFor(m => m.u_name,htmlAttributes : new {@class="form-control"})
            </td>
        </tr>
        <tr>
            <td>
                <b> @Html.DisplayNameFor(m => m.email_add) </b>
            </td>
            <td>
                @Html.TextBoxFor(m => m.email_add, htmlAttributes: new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <b> @Html.DisplayNameFor(m => m.b_date) </b>
            </td>
            <td>
                <input type="datetime-local" name="b_date" class="form-control"/>
            </td>
        </tr>
        <tr>
            <td>
                <b> @Html.DisplayNameFor(m => m.contact) </b>
            </td>
            <td>
                @Html.TextBoxFor(m => m.contact, htmlAttributes: new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <b> @Html.DisplayNameFor(m => m.imgfile) </b>
            </td>
            <td>
                <input type="file" name="imgfile" class="form-control"/>
            </td>
        </tr>
    </table>
    <button type="submit" value="Save" id="sbmt" class="btn btn-primary"> Send </button>
</form>